<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatterPlay"
        tools:targetApi="31"

        android:usesCleartextTraffic="true"
        >
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ChatterPlay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.chat.ChatlistActivity" />
        <activity android:name=".ui.activities.chat.ChatActivity" />
        <activity android:name=".ui.activities.chat.ChatCreationActivity" />
        <activity android:name=".ui.activities.chat.ChatJoinActivity" />
        <activity android:name=".ui.activities.LoginActivity" />
        <activity android:name=".ui.activities.games.GameListActivity" />
        <activity android:name=".ui.activities.games.GameActivitiy" />
        <activity android:name=".ui.activities.games.GameInvitationActivity" />
        <activity android:name=".ui.activities.UserInformationActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>